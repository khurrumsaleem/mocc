    <sweeper type="moc" n_inner="5">
        <ang_quad type="ls" order="4" />
        <rays spacing="0.01" />
    </sweeper>
</solver>

<material_lib path="c5g7.xsl">
    <material id="1" name="UO2-3.3" />
    <material id="2" name="MOX-4.3" />
    <material id="6" name="Moderator" />
</material_lib>

