import os
Import('env')

# Stuff for pulling in TPLs
cwd = Dir('.')

objs = []

objs.append(env.Object('files.cpp'))
objs.append(env.Object('filescrubber.cpp'))
objs.append(env.Object('inputproc.cpp'))
objs.append(env.Object('pinmesh_cyl.cpp'))
objs.append(env.Object('pinmesh_rect.cpp'))
objs.append(env.Object('pinmesh.cpp'))
objs.append(env.Object('material.cpp'))
objs.append(env.Object('materiallib.cpp'))
objs.append(env.Object('fixedsrc_solver.cpp'))
objs.append(env.Object('eigen_solver.cpp'))
objs.append(env.Object('moc_sweeper.cpp'))
