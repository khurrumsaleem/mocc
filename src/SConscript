import os
Import('env')

# Stuff for pulling in TPLs
cwd = Dir('.')

objs = []

objs.append(env.Object('files.cpp'))
objs.append(env.Object('file_scrubber.cpp'))
objs.append(env.Object('input_proc.cpp'))
objs.append(env.Object('pin_mesh_cyl.cpp'))
objs.append(env.Object('pin_mesh_rect.cpp'))
objs.append(env.Object('pin_mesh.cpp'))
objs.append(env.Object('material.cpp'))
objs.append(env.Object('material_lib.cpp'))
objs.append(env.Object('fixed_source_solver.cpp'))
objs.append(env.Object('eigen_solver.cpp'))
objs.append(env.Object('moc_sweeper.cpp'))
objs.append(env.Object('transport_sweeper_factory.cpp'))

Import('lib_objs')

objs = objs + lib_objs


mocc = env.Program(target="mocc", source=["mocc.cpp"] + objs)


Default(mocc)
